#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2

VERSION="1.9.1"

ARCHIVE_NAME=phantomjs-${VERSION}-linux-x86_64
SOURCE_FILE_NAME=${ARCHIVE_NAME}.tar.bz2
FILE_NAME=${ARCHIVE_NAME}.tar.gz
BUILDPACK_PHANTOMJS_PACKAGE=https://phantomjs.googlecode.com/files/${SOURCE_FILE_NAME}

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
  echo "-----> Fetching PhantomJS buildpack binaries from: ${BUILDPACK_PHANTOMJS_PACKAGE}"
  curl $BUILDPACK_PHANTOMJS_PACKAGE -s -o $CACHE_DIR/$FILE_NAME
fi

echo "-----> Extracting PhantomJS binaries"
mkdir -p $BUILD_DIR/vendor/phantomjs
tar zxf $CACHE_DIR/$FILE_NAME -C $BUILD_DIR/vendor/phantomjs

echo "-----> Cloning casperjs"
cd $BUILD_DIR/vendor
git clone git://github.com/n1k0/casperjs.git
